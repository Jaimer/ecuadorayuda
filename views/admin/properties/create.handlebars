<div class="block-header">
    <div class="row clearfix">
        <div class="col-md-6 col-sm-12">
            <h1>Crear Propiedad</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Inicio</a></li>
                <li class="breadcrumb-item"><a href="/admin/properties">Propiedades</a></li>
                <li class="breadcrumb-item active" aria-current="page">Crear Propiedad</li>
                </ol>
            </nav>
        </div>
    </div>
    </div>

    <div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="body">
                <form action="/admin/properties/create" method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="col">
                        {{#each errors}}
                            <div class="alert alert-danger" role="alert">
                                <strong>{{message}}</strong>
                            </div>                
                        {{/each}}
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        <div class="form-group">
                            <label for="title">Título</label>
                            <input type="text" class="form-control" id="title" name="title" placeholder="Ingresa el título" >
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-sm-3">
                            <div class="form-group">
                                <label for="title">Código</label>
                                <input type="text" class="form-control" id="code" name="code" placeholder="Ingresa el código" >
                            </div>
                    </div>
                    <div class="col-sm-3">
                            <div class="form-group">
                                <label for="status">Tipo de Inmueble</label>
                                <select name="type" id="type" class="custom-select">
                                    {{#each types}}
                                    <option value="{{_id}}"><i class="fa fa-fw fa-{{icon}}"></i>{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="status">Finalidad</label>
                            <select name="btype" id="btype" class="custom-select">
                                <option value="Industrial">Industrial</option>
                                <option value="Comercial">Comercial</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="status">Status</label>
                            <select name="status" id="status" class="custom-select">
                                <option value="public">Publico</option>
                                <option value="private">Privado</option>
                                <option value="draft">Borrador</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-sm-3">
                            <div class="form-group">
                                <label for="status">Operación</label>
                                <select name="operation" id="operation" class="custom-select">
                                    <option value="En Venta">En Venta</option>
                                    <option value="En Alquiler">En Alquiler</option>
                                </select>
                            </div>
                    </div>
                    <div class="col-sm-3">
                            <div class="form-group">
                                <label for="title">Precio</label>
                                <input type="text" class="form-control" id="price" name="price" >
                            </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="title">Ubicación (Mapa)</label>
                            <input type="text" class="form-control" id="location" name="location" >
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="hood">Provincia - Ciudad - Sector</label>
                            <select name="hood" id="hood" class="selectpicker" data-live-search="true">
                                {{#each hoods}}
                                <option value="{{_id}}">{{city.state}} - {{city.name}} - {{name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-sm-4">            
                        <div class="form-group">
                                <label for="title">Área Total</label>
                                <input type="text" class="form-control" id="area" name="area" >
                            </div> 
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="title">Frente</label>
                            <input type="text" class="form-control" id="front" name="front" >
                        </div>
                    </div>
                    <div class="col">            
                            <div class="form-group">
                                <label for="title">Fondo</label>
                                <input type="text" class="form-control" id="depth" name="depth" >
                            </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-sm-6">
                        <div class="form-row">
                            <label for="">Características</label>
                        </div>
                        <div class="form-row">
                            <div class="col" id="features" name="features">
                                <div class="form-row" id="ftrow1">
                                    <div class="form-group col-5">
                                        <input type="text" class="form-control" name="ftlbl" placeholder="Titulo">
                                    </div>
                                    <div class="col-1 form-group text-center">
                                        =
                                    </div>
                                    <div class="col-5 form-group">
                                        <input type="text" class="form-control" name="fttxt" placeholder="Valor">
                                    </div>
                                    <div class="col-1 form-group">
                                        <button type="button" class="btn btn-danger" onclick="deleterow(1)">X</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <button type="button" class="btn btn-primary" id="addfeat" onclick="addfeatrow()" data-count="1">Añadir</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="description">Descripción</label>
                            <textarea class="form-control" id="description" rows="3" name="description" ></textarea>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        <div class="form-group">
                            <label for="preview">
                                Imagen Destacada
                            </label>
                        </div>
                        <div class="row" id="featured">
                            <div class="col-12">
                                <img src="" height="120px">
                                <i class="fa fa-delete dltbtn"></i>
                                <input type="hidden" name="featuredimage">
                            </div>
                        </div>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Subir Imagen</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="uploadfeatured" id="uploadfeatured" accept="image/*" data-max-size="1048576‬">
                                <label class="custom-file-label" for="inputGroupFile01">Sube una foto max 1 MB</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        <div class="form-group">
                            <label for="preview">
                                Galería de Propiedad
                            </label>
                        </div>
                        <div class="row" id="gallery">

                        </div>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Subir Imagen</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="image" id="image" accept="image/*" data-max-size="1048576‬">
                                <label class="custom-file-label" for="inputGroupFile01">Sube una foto max 1 MB</label>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <h2>Información Interna</h2>
                <div class="form-row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="address">Dirección Exacta</label>
                            <input type="text" class="form-control" id="address" name="address" placeholder="Ingresa la dirección" >
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="owner">Nombre de Contacto</label>
                            <input type="text" class="form-control" id="owner" name="owner" placeholder="Ingresa el nombre del contacto" >
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="contact">Teléfono de Contacto</label>
                            <input type="text" class="form-control" id="contact" name="contact" placeholder="Ingresa el teléfono de contacto" >
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-4"></div>
                    <div class="col-4"><button type="submit" class="btn btn-primary" id="submit">Crear Propiedad</button></div>
                    &nbsp;&nbsp;
                    <a href="/admin/properties"><button type="button" class="btn btn-danger">Cancelar</button></a></div>
                    <div class="col-4"></div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
