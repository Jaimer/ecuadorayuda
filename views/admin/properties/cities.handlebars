<div class="block-header">
    <div class="row clearfix">
        <div class="col-md-6 col-sm-12">
            <h1>Ciudades</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Inicio</a></li>
                <li class="breadcrumb-item active" aria-current="page">Ciudades</li>
                </ol>
            </nav>
        </div>            
        <div class="col-md-6 col-sm-12 text-right hidden-xs">
            <a href="/admin/properties/cities/create" class="btn btn-sm btn-primary" title="">Crear Ciudad</a>
        </div>
    </div>
</div>
{{#each errors}}
    <div class="alert alert-danger" role="alert">
        <strong>{{message}}</strong>
    </div>                
{{/each}}
 <div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="body">
                <div class="header">
                    <h2>Listado de Ciudades</h2>
                    <ul class="header-dropdown dropdown">    
                        <li><a href="javascript:void(0);" class="full-screen"><i class="icon-frame"></i></a></li>
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"></a>
                            <ul class="dropdown-menu">
                                <li><a href="javascript:void(0);">Action</a></li>
                                <li><a href="javascript:void(0);">Another Action</a></li>
                                <li><a href="javascript:void(0);">Something else</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover dataTable js-exportable">
                            <thead>
                                <tr>
                                    <th>Ciudad</th>
                                    <th>Provincia</th>
                                    <th>País</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Ciudad</th>
                                    <th>Provincia</th>
                                    <th>País</th>
                                    <th>Acciones</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                {{#each cities}}
                                <tr>
                                    <td scope="row">{{name}}</td>
                                    <td>{{state}}</td>
                                    <td>{{country}}</td>
                                    <td><a href="/admin/properties/cities/edit/{{_id}}"><button class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</button></a><form action="/admin/properties/cities/delete/{{_id}}?_method=DELETE" method="POST"><button class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Borrar</button></form></td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>